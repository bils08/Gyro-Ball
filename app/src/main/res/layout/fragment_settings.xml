<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".View.FragmentSetting">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty"
        android:textSize="@dimen/txtSize"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvDifficulty"/>

    <EditText
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDifficulty"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txtSize"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvJumlahBola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jumlah_bola"
        android:textSize="@dimen/txtSize"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/difficulty"/>

    <EditText
        android:id="@+id/jumlahBola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficulty"
        android:layout_toRightOf="@+id/tvJumlahBola
        android:inputType="number"
        android:textSize="@dimen/txtSize" />

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlahBola"
        android:layout_centerHorizontal="true"
        android:id="@+id/apply"
        android:text="Apply"
        android:textSize="@dimen/txtSize" />

</RelativeLayout>